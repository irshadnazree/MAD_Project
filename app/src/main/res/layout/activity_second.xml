<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/my_drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SecondActivity"
tools:ignore="HardcodedText">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgVw1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_food" />

    <TextView
        android:id="@+id/txtVwImg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burger Ayam RM3.50/pcs"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/tvQty1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Item quantity: 2, 3, 5" />

    <ImageView
        android:id="@+id/imgVw2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_food" />

    <TextView
        android:id="@+id/txtVwImg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burger Daging RM2.50/pcs"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/tvQty2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Item quantity: 2, 3, 5" />

    <ImageView
        android:id="@+id/imgVw3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_food" />

    <TextView
        android:id="@+id/txtVwImg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burger Special RM5.50/pcs"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/tvQty3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Item quantity: 2, 3, 5" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="fnShowOrder"
        android:text="@string/btnShow" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="fnGoNext"
        android:text="Click to Register" />

</LinearLayout>

<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/menu_main"/>

</androidx.drawerlayout.widget.DrawerLayout>